<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".views.ZooAnimalDetail">

    <ImageView
        android:id="@+id/audio_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_audiotrack_black_24dp"
        />

    <TextView
        android:id="@+id/animal_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/audio_icon_iv"
        app:layout_constraintBottom_toTopOf="@id/animal_type_tv"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/animal_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/animal_name_tv"
        app:layout_constraintTop_toBottomOf="@id/animal_name_tv"
        app:layout_constraintEnd_toEndOf="@id/animal_name_tv"
        />

</androidx.constraintlayout.widget.ConstraintLayout>